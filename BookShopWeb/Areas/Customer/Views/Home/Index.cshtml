@model IEnumerable<Product>

@{
    ViewData["Title"] = "Home Page";
}

<div class="row pb-3">
    @{
        System.Diagnostics.Debug.Assert(Model != null, nameof(Model) + " != null");
    }
    @foreach (var product in Model)
    {
        <div class="col-lg-3 col-md-6">
            <div class="row p-2">
                <div class="col-12 p-1" style="border: 1px solid #008cba; border-radius: 5px;">
                    <div class="card">
                        <img src="@product.ImageUrl" class="card-img-top rounded" alt="product image">
                        <div class="card-body">
                            <div class="pl-1">
                                <p class="card-title h5 text-primary">@product.Title</p>
                                <p class="card-title text-secondary">by <b>@product.Author</b></p>
                            </div>
                            <div class="pl-1">
                                <p>List Price: <span style="text-decoration: line-through;"><b>$@product.ListPrice.ToString("0.00")</b></span></p>
                            </div>
                            <div class="pl-1">
                                <p>As low as: <b>$@product.Price100.ToString("0.00")</b></p>
                            </div>
                        </div>
                    </div>
                    <div>
                        <a asp-action="Details" class="btn btn-primary form-control" asp-route-productId="@product.Id">Details</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>